datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Account {
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String?
    access_token      String?
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String?
    session_state     String?

    user User @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    accounts      Account[]
    sessions      Session[]
    Space         Space[]
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model Fields {
    id          String    @id @default(cuid())
    name        String
    placeholder String
    type        String
    fieldid     String
    fieldclass  String
    textrows    String?
    textcols    String?
    createdAt   DateTime  @default(now())
    updatedAt   DateTime? @updatedAt
}

model Space {
    id        Int       @id @default(autoincrement())
    name      String
    userId    String
    createdAt DateTime  @default(now())
    user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
    Toolgen   Toolgen[]
}

model Tools {
    id          Int       @id @default(autoincrement())
    name        String?
    description String?
    slug        String?
    category    String?
    status      String?
    imageUrl    String?
    model       String?
    createdAt   DateTime  @default(now())
    Toolgen     Toolgen[]
}

model Toolgen {
    id        Int       @id @default(autoincrement())
    title     String?
    toolId    Int
    spaceId   Int
    createdAt DateTime  @default(now())
    tool      Tools     @relation(fields: [toolId], references: [id], onDelete: Cascade)
    space     Space     @relation(fields: [spaceId], references: [id], onDelete: Cascade)
    Copygen   Copygen[]
}

model Copygen {
    id        Int      @id @default(autoincrement())
    text      String?
    toolgenId Int
    createdAt DateTime @default(now())
    toolgen   Toolgen  @relation(fields: [toolgenId], references: [id], onDelete: Cascade)
}
